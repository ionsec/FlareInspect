# FlareInspect Environment Configuration
# Copy this file to .env and update with your values

# Cloudflare Configuration
CLOUDFLARE_TOKEN=your_cloudflare_api_token_here

# Logging Configuration
LOG_LEVEL=info
# Set to true to enable detailed Cloudflare API debug logging
CLOUDFLARE_DEBUG=false
# Alternative: Set DEBUG=true to enable debug mode
# DEBUG=true

# Output Configuration
DEFAULT_OUTPUT_DIR=./output

# CLI Configuration
# Set to true to suppress banner and non-essential output
QUIET_MODE=false
# Skip banner display
NO_BANNER=false

# Docker Configuration (when running in container)
NODE_ENV=production